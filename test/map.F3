    let fun to_string (x : int) : string = 
        if x = 1 then "1"
        else if x = 2 then "2"
        else if x = 3 then "3"
        else "not a number" in 
    let fun map (f : int -> string) (l : int list) : string list = 
        if is_empty l then []
        else f (hd l) :: map f (tl l)
    in map to_string [1, 2, 3, 4]